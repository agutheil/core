<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql"/>
    <property name="autoIncrement" value="false" dbms="oracle"/>

    <property name="floatType" value="real" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity CustomerOrder.
    -->
    <changeSet id="20151015095709" author="jhipster">
        <createTable tableName="CUSTOMERORDER">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}" >
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="placed_on" type="timestamp">
                <constraints nullable="false" />
            </column>
            <column name="order_status" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="payment_status" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="total_amount" type="double">
                <constraints nullable="false" />
            </column>
            <column name="tax" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="paypal_account_id" type="varchar(100)">
                <constraints nullable="false" />
            </column>
            <column name="paypal_transaction_id" type="varchar(100)">
                <constraints nullable="false" />
            </column>
            <column name="currency" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="tax_currency" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="product_id" type="bigint"/>
            <column name="customer_id" type="bigint"/>
            <column name="user_id" type="bigint"/>
        </createTable>
        <dropDefaultValue tableName="CUSTOMERORDER" columnName="placed_on" columnDataType="datetime"/>


        <addForeignKeyConstraint baseColumnNames="product_id"
                                 baseTableName="CUSTOMERORDER"
                                 constraintName="fk_customerorder_product_id"
                                 referencedColumnNames="id"
                                 referencedTableName="PRODUCT"/>

        <addForeignKeyConstraint baseColumnNames="customer_id"
                                 baseTableName="CUSTOMERORDER"
                                 constraintName="fk_customerorder_customer_id"
                                 referencedColumnNames="id"
                                 referencedTableName="CUSTOMER"/>

        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="CUSTOMERORDER"
                                 constraintName="fk_customerorder_user_id"
                                 referencedColumnNames="id"
                                 referencedTableName="JHI_USER"/>

    </changeSet>
</databaseChangeLog>
