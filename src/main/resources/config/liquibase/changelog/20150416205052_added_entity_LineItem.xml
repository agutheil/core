<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <!--
        Added the entity LineItem.
    -->
    <changeSet id="20150416205052" author="jhipster">
        <createTable tableName="LINEITEM">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="amount" type="integer"/>
            <column name="article_id" type="bigint"/>
            <column name="socialcart_id" type="bigint"/>
        </createTable>
        
        <addForeignKeyConstraint baseColumnNames="article_id"
                                 baseTableName="LINEITEM"
                                 constraintName="fk_lineitem_article_id"
                                 referencedColumnNames="id"
                                 referencedTableName="ARTICLE"/>

        <addForeignKeyConstraint baseColumnNames="socialcart_id"
                                 baseTableName="LINEITEM"
                                 constraintName="fk_lineitem_socialcart_id"
                                 referencedColumnNames="id"
                                 referencedTableName="SOCIALCART"/>

    </changeSet>
</databaseChangeLog>
